@model IEnumerable<MyBlog.Models.Category>

@{
    ViewBag.Title = "博客分类";
    Layout = "~/Views/Shared/_Layout_Admin.cshtml";
}

<h2>博客分类</h2>

<p>
    @Html.ActionLink("新建", "Create", null, new { @class = "btn btn-primary" })
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.CategoryName)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.CategoryName)
        </td>
        <td>
            @Html.ActionLink("编辑", "Edit", new { id=item.CategoryId }) |
            @Html.ActionLink("详情", "Details", new { id=item.CategoryId }) |
            @Html.ActionLink("删除", "Delete", new { id=item.CategoryId })
        </td>
    </tr>
}

</table>
