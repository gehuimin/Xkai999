@model IEnumerable<MyBlog.Models.Message>
@using Microsoft.AspNet.Identity;
@{
    ViewBag.Title = "我的留言";
    Layout = "~/Views/Shared/_Layout_Profile.cshtml";
}

<h2>我的留言</h2>

<p>
    @Html.ActionLink("新留言", "Create", new { id = string.Empty, fromUserId = User.Identity.GetUserId() }, new { @class="btn btn-primary"})
</p>
<table class="table">
    <tr>
        <th style="width:10%">
            @Html.DisplayNameFor(model => model.FromUserId)
        </th>
        <th style="width:10%">
            @Html.DisplayNameFor(model => model.ToUserId)
        </th>
        <th style="width:50%">
            @Html.DisplayNameFor(model => model.MsgContent)
        </th>
        <th style="width:20%">
            @Html.DisplayNameFor(model => model.CreatedTime)
        </th>
        <th style="width:10%"></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.FromUser.NickName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ToUser.NickName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.MsgContent)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.CreatedTime)
        </td>
        <td>
            @Html.ActionLink("删除", "Delete", new { id=item.MessageId })
        </td>
    </tr>
}

</table>
