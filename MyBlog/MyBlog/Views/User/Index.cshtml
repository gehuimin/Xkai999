@model IEnumerable<MyBlog.Models.SetAdminRoleViewModel>

@{
    ViewBag.Title = "用户管理";
    Layout = "~/Views/Shared/_Layout_Admin.cshtml";
}

<h2>用户管理</h2>

<table class="table">
    <tr>
        <th>
            登录用户名
        </th>
        <th>
            呢你
        </th>
        <th>
            是否管理员
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {

    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.UserName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.NickName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.IsAdmin)
        </td>
        <td>
            @Html.ActionLink("设置管理员", "SetRole", new { username = item.UserName })|
            @Html.ActionLink("删除", "Delete", new { username = item.UserName })
        </td>
    </tr>
}

</table>
